package gmit.ie;

import java.io.FileNotFoundException;
import java.io.FileOutputStream;
import java.io.IOException;
import java.io.ObjectOutputStream;

public class Write {
	
	public void fileWriter(String fileName, Employee employee,int number) throws FileNotFoundException, IOException {
		ObjectOutputStream writer = new ObjectOutputStream(new FileOutputStream(fileName,true));
		writer.writeObject(employee);
		number++;
		writer.close();
	}

