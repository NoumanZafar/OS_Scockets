package gmit.ie;

import java.io.*;
import java.util.Scanner;

public class EmployeeRegistration {
	private boolean exit = true;

	public EmployeeRegistration() {
		super();
	}

	public void registration(ObjectInputStream in, ObjectOutputStream out, String message, Scanner console)
			throws ClassNotFoundException, IOException {
		do {
			receiveAndSendMessage(in, out, message, console);
			
			receiveAndSendMessage(in, out, message, console);
			
			receiveAndSendMessage(in, out, message, console);
			
			receiveAndSendMessage(in, out, message, console);

			this.exit = false;
		} while (exit);
	}

	public void receiveAndSendMessage(ObjectInputStream in, ObjectOutputStream out, String message, Scanner console)
			throws ClassNotFoundException, IOException {
		message = (String) in.readObject();
		System.out.println(message);
		message = console.nextLine();
		System.out.println(message);
		sendMessage(message, out);
	}

	public void sendMessage(String message, ObjectOutputStream out) {
		try {
			out.writeObject(message);
			out.flush();
		} catch (IOException e) {
			e.printStackTrace();
		}
	}
}
